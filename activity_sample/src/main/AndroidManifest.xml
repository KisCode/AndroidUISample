<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiscode.activity">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidUISample">
        <activity android:name="com.kiscode.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".single.AActivity"
            android:label="AAA"/>
        <activity android:name=".single.BActivity"
            android:theme="@style/DialogActivityTheme"
            android:label="B"/>
        <activity android:name=".single.CActivity"
            android:label="C"/>
    </application>

</manifest>