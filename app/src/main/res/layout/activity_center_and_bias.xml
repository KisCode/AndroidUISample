<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraint.CenterAndBiasActivity">
    <TextView
        android:id="@+id/tv_title_center_and_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centering positioning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--layout_constraintHorizontal_bias -->
    <TextView
        android:id="@+id/tv_content1_center_and_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.3 Centering positioning and bias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_center_and_bias"/>
    <TextView
        android:id="@+id/tv_content2_center_and_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.7 Centering positioning and bias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/tv_content1_center_and_bias"/>
</androidx.constraintlayout.widget.ConstraintLayout>