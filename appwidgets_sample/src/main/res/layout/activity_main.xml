<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="12dp">

    <Button
        android:id="@+id/btn_add_watter_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Watter Widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add_clock_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Clock Widget"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_watter_widget"/>


    <Button
        android:id="@+id/btn_do_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Work"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_clock_widget"/>

</androidx.constraintlayout.widget.ConstraintLayout>